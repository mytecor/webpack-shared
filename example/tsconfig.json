{
	"compilerOptions": {
		"target": "ES2020",
		"allowJs": true,
		"strict": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "react-jsx",

		"module": "ESNext",
		"moduleResolution": "node",
		"baseUrl": "./",
		"rootDir": "./",
		"outDir": "./dist",
		"sourceMap": true,

		"paths": {
			"comp/*": ["./components/*"]
		}
	},
	"exclude": ["node_modules"]
}

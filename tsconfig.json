{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2020",
		"moduleResolution": "node",
		"allowJs": true,
		"strict": true,
		"outDir": "./dist",
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"rootDir": "./src",
		"declaration": true,
		"skipLibCheck": true
	},
	"include": ["./src"],
	"exclude": ["node_modules"]
}

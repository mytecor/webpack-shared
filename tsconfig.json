{
	"compilerOptions": {
		"target": "ES2020",
		"allowJs": true,
		"strict": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "react-jsx",

		"module": "ESNext",
		"moduleResolution": "node",
		"baseUrl": "./",
		"rootDir": "./src",
		"outDir": "./dist",
		"sourceMap": true
	},
	"ts-node": {
		"esm": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
